# Example environment configuration for ironic-metadata service

# Ironic API Configuration
IRONIC_URL=http://localhost:6385

# Service Binding Configuration
BIND_ADDR=169.254.169.254
BIND_PORT=80

# OpenStack Authentication (optional - for authenticated Ironic API)
# Leave empty for no-auth/standalone mode
OS_USERNAME=
OS_PASSWORD=
OS_PROJECT_NAME=
OS_USER_DOMAIN_NAME=default
OS_REGION_NAME=

# Logging Configuration
LOG_LEVEL=info

# Advanced Configuration
# Request timeout in seconds
REQUEST_TIMEOUT=30

# Connection pool settings
MAX_IDLE_CONNS=10
MAX_CONNS_PER_HOST=10
IDLE_CONN_TIMEOUT=90
